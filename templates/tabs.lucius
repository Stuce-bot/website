.tabs {
  top: 0;
  width: 100%;
  z-index: 98;
  background: var(--bg-primary)
  position: fixed;
}
.tabs-content {
  position: fixed;
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
}
.tabs-item {
  overflow: auto;
  flex: 0 0 100%;
  flex-shrink: 0;
  margin-right: 12rem;
  scroll-snap-align: center;
}
