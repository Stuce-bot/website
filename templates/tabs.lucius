.tabs {
  display: flex;
  flex-wrap: wrap;
  max-width: 80rem;
  }
.tabs-label {
  padding: 10px 16px;
  cursor: pointer;
  }
.tabs-radio {
  display: none;
  }
.tabs-content {
  order: 1;
  width: 100%;
  display: none;
  }
.tabs-radio:checked+.tabs-label {
   font-weight: bold;
   color: var(--yellow);
   border-bottom: 2px solid var(--yellow);
   }
.tabs-label:hover {
  background: var(--bg-secondary);
  }

.tabs-radio:checked+.tabs-label+.tabs-content {
  display: initial;
  }
