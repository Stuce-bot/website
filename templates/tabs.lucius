.tabs {
  display: flex;
  flex-wrap: wrap;
  }
.tabs-label {
  padding: 10px 16px;
  cursor: pointer;
  }
.tabs-radio {
  display: none;
  }
.tabs-content {
  order: 1;
  width: 100%;
  display: none;
  }
.tabs-radio:checked+.tabs-label {
   font-weight: bold;
   color: var(--yellow);
   border-bottom: 2px solid light-dark(#df8e1d, #f9e2af);
   }
.tabs-label:hover {
  background: light-dark(#dce0e8, #11111b);
  }

.tabs-radio:checked+.tabs-label+.tabs-content {
  display: initial;
  }
