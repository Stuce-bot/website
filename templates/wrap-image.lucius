.wrap-image-left {
  img {
    float: left;
    margin-right: 1rem;
    }  
  }
.wrap-image-right {
    img {
    float: right;
    margin-left: 1rem;
  }
}
.wrap-image-left,
.wrap-image-right {
  img {
    border: 3px solid light-dark(#4c4f69, #cdd6f4);
    border-radius: 1rem;
    }
  }
img {
    max-width: 20rem;
    max-height: 20rem;
}
